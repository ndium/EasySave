<Page x:Class="EasySaveV2.View.FiltersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySaveV2.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FiltersView"
    DataContext="{Binding RelativeSource={RelativeSource Self}}">
    
    <Grid Background="#14213d">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Nom de l'application :"/>
            <TextBox x:Name="txtAppName"/>
            <Button x:Name="SaveFilters_Click" Content="Sauvegarder" Click="OnSaveApp"/>
        </StackPanel>
    </Grid>
</Page>
